<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
          <% if (!contact ) { %>
            <div class="alert alert-danger text-center fw-bold" role="alert">
              Data Kontak Tidak Ditemukan! <br>
              <a href="/contact" class="fw-normal">&laquo;Kembali ke daftar contact</a>
            </div>
          <% }else{ %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                  <p class="card-text"><%=contact.email%></p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-primary badge">Edit</a>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin Ingin Hapus Data?')">Hapus</a>
                  <a href="/contact" class="card-link d-block mt-3">Kembali  ke daftar contact</a>
              
                </div>
              </div>
            <% } %>
        </div>
    </div>
</div>